<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CoreTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--全局字体替换-->
        <!--<item name="android:fontFamily">@font/custom</item>-->
    </style>

    <style name="CoreTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--防止Buttom的文字变大写-->
        <item name="android:textAllCaps">false</item>
        <!--文字超出限制后默认显示...-->
        <item name="android:ellipsize">end</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Activity全局动画-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>

        <item name="android:windowContentOverlay">@null</item>

        <!--边缘手势样式兼容5.0以下系统-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>

        <item name="actionBarSize">48dp</item>

    </style>

    <style name="CoreTheme.Base"></style>

    <!-- Activity切换动画 - 样式 -->
    <style name="ActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!--通过主题配置全屏，不会出现状态栏闪现问题-->
    <style name="SplashTheme" parent="AppTheme">
        <!--参考：@android:style/Theme.NoTitleBar.Fullscreen-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FontFamilyCustom">
        <item name="android:fontFamily">@font/custom</item>
    </style>

    <style name="FontFamilyFangZheng">
        <item name="android:fontFamily">@font/fzbiaoysk_zbjt</item>
    </style>

    <style name="FontFamilySystem">
        <item name="android:fontFamily">@null</item>
    </style>

</resources>
