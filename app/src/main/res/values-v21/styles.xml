<resources>


    <!--TranslucentBar主题针对API 21以及以上的设置在这-->
    <style name="CoreTheme.Base">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- windowTranslucentStatus = false 才生效，为 true 时系统默认为 #66000000 -->
        <item name="android:statusBarColor">#3f000000</item>
        <!-- windowTranslucentNavigation = false 才生效，为 true 时默认为 #66000000 - nubia X 无效 -->
        <item name="android:navigationBarColor">#000000</item>

        <!--确保状态栏显示，可能继承多次会被设置为false-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--水波纹颜色-->
        <item name="colorControlHighlight">#1f000000</item>
    </style>

</resources>
