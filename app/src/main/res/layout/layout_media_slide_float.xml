<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="202dp"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="80dp"
    android:background="@drawable/media_slide_float_background"
    android:elevation="2dp"
    android:minWidth="60dp"
    android:orientation="horizontal"
    android:translationZ="2dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/media_slide_float_icon" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:padding="10dp"
        android:src="@drawable/media_slide_float_play" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="110dp"
        android:padding="10dp"
        android:src="@mipmap/media_slide_float_next" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="156dp"
        android:padding="16dp"
        android:src="@mipmap/media_slide_float_close" />
</FrameLayout>