<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aliya.base.sample.ui.main.HomeFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_badge_dot"
        android:paddingRight="6dp"
        android:text="主页" />

    <com.aliya.base.sample.ui.widget.LoadWave
        android:id="@+id/load_wave"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/ic_loading_logo"
        app:overColor="#e9e9e9" />

</FrameLayout>