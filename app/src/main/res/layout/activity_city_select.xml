<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:fitsSystemWindows="true"
    tools:context=".viewmodel.CitySelectActivity">

    <TextView
        android:id="@+id/tv_top_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="选择城市"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment_province"
        android:name="com.aliya.base.simple.viewmodel.ProvinceFragment"
        android:layout_width="68dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top_bar" />

    <fragment
        android:id="@+id/fragment_city"
        android:name="com.aliya.base.simple.viewmodel.CityFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_province"
        app:layout_constraintTop_toBottomOf="@id/tv_top_bar" />

</android.support.constraint.ConstraintLayout>